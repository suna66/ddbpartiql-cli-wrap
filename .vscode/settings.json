{
  "prettier.tabWidth": 2,
  "editor.renderWhitespace": "all",
  
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.insertFinalNewline": true,
  
  "[typescript]": {
    "prettier.tabWidth": 4,
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "prettier.tabWidth": 4,
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
}
